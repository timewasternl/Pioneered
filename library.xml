<Template>
  <WidgetGroup>
    <SizePolicy>me,e</SizePolicy>
    <Layout>vertical</Layout>
    <Children>
      <WidgetGroup>
        <ObjectName>LibraryWrapper</ObjectName>
        <Layout>vertical</Layout>
        <Size>0me,0me</Size>
        <Children>
          <WidgetGroup>
            <ObjectName>SidebarContainer</ObjectName>
            <Layout>horizontal</Layout>
            <Size>0me,40max</Size>
            <Children>
              <SearchBox>
                <ObjectName>SearchBox</ObjectName>
                <Size>0me,40max</Size>
              </SearchBox>
              <PushButton>
                <ObjectName>SidebarButton</ObjectName>
                <Size>80p,40p</Size>
                <NumberStates>2</NumberStates>
                <State>
                  <Number>0</Number>
                  <Text>Show &#8612;</Text>
                </State>
                <State>
                  <Number>1</Number>
                  <Text>Hide &#8614;</Text>
                </State>
                <Connection>
                  <ConfigKey>[Sidebar],sidebar_visible</ConfigKey>
                </Connection>
              </PushButton>
            </Children>
          </WidgetGroup>
          <WidgetGroup>
            <SizePolicy>me,me</SizePolicy>
            <Layout>horizontal</Layout>
            <Size>0me,0me</Size>
            <Children>
              <WidgetGroup>
                <ObjectName>LibraryWrapper</ObjectName>
                <Layout>horizontal</Layout>
                <Children>
                  <Library>
                    <ObjectName>Library</ObjectName>
                    <Size>0me,0me</Size>
                    <BgColor>#000</BgColor>
                    <FgColor>#75001a</FgColor>
                    <TrackTableBackgroundColorOpacity>0.4</TrackTableBackgroundColorOpacity>
                  </Library>
                </Children>
                <Connection>
                  <ConfigKey>[Sidebar],sidebar_visible</ConfigKey>
                  <BindProperty>visible</BindProperty>
                  <Transform><Not/></Transform>
                </Connection>
              </WidgetGroup>
              <WidgetGroup>
                <ObjectName>SidebarWrapper</ObjectName>
                <Layout>horizontal</Layout>
                <Children>
                  <LibrarySidebar>
                    <ObjectName>LibrarySidebar</ObjectName>
                    <Size>0me,0me</Size>
                  </LibrarySidebar>
                </Children>
                <Connection>
                  <ConfigKey>[Sidebar],sidebar_visible</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
              </WidgetGroup>
            </Children>
          </WidgetGroup>
        </Children>
      </WidgetGroup>
      <WidgetGroup>
        <ObjectName>Decks</ObjectName>
        <Layout>horizontal</Layout>
        <Size>0me,85max</Size>
        <Children>
          <Template src="skin:deck.xml">
            <SetVariable name="channel">1</SetVariable>
          </Template>
          <Template src="skin:deck.xml">
            <SetVariable name="channel">2</SetVariable>
          </Template>
        </Children>
      </WidgetGroup>
    </Children>
  </WidgetGroup>
</Template>
